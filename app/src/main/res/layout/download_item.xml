<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/edge_distance_small"
    android:paddingHorizontal="@dimen/edge_distance">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/corner_radius">

        <ImageView
            android:id="@+id/cover_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_holder"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edge_distance_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textFontWeight="900"
            android:textSize="@dimen/text_size_large" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            app:trackCornerRadius="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="900"
                android:textSize="@dimen/text_size"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/download"
        style="?attr/materialIconButtonFilledTonalStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:icon="@drawable/download"
        android:backgroundTint="@color/transparent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/pause"
        style="?attr/materialIconButtonFilledTonalStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:icon="@drawable/baseline_pause_24"
        android:backgroundTint="@color/transparent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/reset"
        style="?attr/materialIconButtonFilledTonalStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:icon="@drawable/baseline_refresh_24"
        android:backgroundTint="@color/transparent"
        android:visibility="gone"/>

</LinearLayout>