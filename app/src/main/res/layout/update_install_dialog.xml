<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".view.UpdateView"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/linear_card_background"
        android:paddingHorizontal="@dimen/edge_distance"
        android:paddingVertical="@dimen/edge_distance_large"
        android:elevation="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/rocket"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/install_tip"
            android:textSize="@dimen/text_size_large"
            android:layout_marginVertical="@dimen/edge_distance_large"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/install"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:insetTop="0dp"
            android:insetBottom="1dp"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:paddingVertical="0dp"
            android:text="@string/install_update" />

    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/round_close"
        tools:ignore="ContentDescription"
        app:tint="@color/white"/>

</LinearLayout>